<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchedulingApp.Views.ShiftsPage"
             Title="Browse Shifts">
    <!-- 
        Author: Alex Sorichetti
        Date: Nov 19, 2025
        Desc: Page for browsing and filtering available volunteer shifts
    -->
    <Grid RowDefinitions="Auto,*" Padding="20" RowSpacing="15">
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <!--Search Bar-->
            <SearchBar x:Name="ShiftSearchBar"
                       Placeholder="Search shifts..."
                       SearchButtonPressed="OnSearchBarBUttonPressed"
                       TextChanged="OnSearchBarTextChanged"/>
            
            <!--Filter Buttons-->
            <HorizontalStackLayout Spacing="10">
                <Button Text="All"
                        x:Name="AllFilterButton"
                        BackgroundColor="#1091F1"
                        TextColor="White"
                        CornerRadius="20"
                        Padding="15,8"
                        Clicked="OnAllFilterClicked"/>
                <Button Text="This Week"
                        x:Name="WeekFilterButton"
                        BackgroundColor="#E0E0E0"
                        TextColor="#4F4F4F"
                        CornerRadius="20"
                        Padding="15,8"
                        Clicked="OnWeekFilterClicked"/>
                <Button Text="Weekends"
                        x:Name="WeekendFilterButton"
                        BackgroundColor="#E0E0E0"
                        TextColor="#4F4F4F"
                        CornerRadius="20"
                        Padding="15,8"
                        Clicked="OnWeekendFilterClicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        
        <!--Shifts List -->
        <ScrollView Grid.Row="1">
            <CollectionView x:Name="ShiftsCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5"
                                Padding="15"
                                BackgroundColor="White"
                                Stroke="#E0E0E0"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="*,Auto">
                                <!--Title-->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#2E2E2E"/>
                                
                                <!--Organization Info-->
                                <Border Grid.Row="0" Grid.Column="1"
                                        BackgroundColor="#E3F2FD"
                                        Padding="8,4"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="{Binding OrganizationName}"
                                           FontSize="11"
                                           TextColor="#1976D2"/>
                                </Border>
                                
                                <!--Date and Time-->
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding StartTime, StringFormat='{0:MMM dd, yyyy} * {0:hh:mm tt}'}"
                                       FontSize="14"
                                       TextColor="#666"
                                       Margin="0,5,0,0"/>
                                
                                <!--Location-->
                                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding Location, StringFormat='* {0}'}"
                                       FontSize="14"
                                       TextColor="#666"
                                       Margin="0,2,0,0"/>
                                
                                <!--Description-->
                                <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding Description}"
                                       FontSize="13"
                                       TextColor="#888"
                                       Margin="0,8,0,0"
                                       LineBreakMode="WordWrap"/>

                                <!-- Slots and Sign Up Button -->
                                <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                      ColumnDefinitions="*,Auto"
                                      Margin="0,10,0,0">

                                    <Label Grid.Column="0"
                                           VerticalOptions="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding SlotsAvailable}" 
                                                      FontAttributes="Bold"
                                                      TextColor="#4CAF50"/>
                                                <Span Text=" / " 
                                                      TextColor="#666"/>
                                                <Span Text="{Binding SlotsTotal}" 
                                                      TextColor="#666"/>
                                                <Span Text=" spots available" 
                                                      TextColor="#666"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <Button Grid.Column="1"
                                            Text="Sign Up"
                                            BackgroundColor="#4CAF50"
                                            TextColor="White"
                                            CornerRadius="8"
                                            Padding="20,8"
                                            Clicked="OnSignUpClicked"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <!--View for if No Shifts Found-->
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" Padding="40">
                        <Label Text="No shifts found"
                               FontSize="20"
                               TextColor="#333"
                               HorizontalOptions="Center"/>
                        <Label Text="Try adjusting your filters"
                               FontSize="14"
                               TextColor="#000"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>