<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SchedulingApp"
             x:Class="SchedulingApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#4F4F4F</Color>
            <Color x:Key="Secondary">#2196F3</Color>
            <Color x:Key="Accent">#4CAF50</Color>
            <Color x:Key="LightGray">#E0E0E0</Color>
            <Color x:Key="DarkGray">#666666</Color>

            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="15,10"/>
            </Style>

            <Style TargetType="Border">
                <Setter Property="StrokeThickness" Value="0"/>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
